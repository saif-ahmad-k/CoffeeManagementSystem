@model CoffeePricingMgt.Models.tblRequestCredential
@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Request Login Credentials</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Request Login Credentials</h2>
        <form action="@Url.Action("SendCredentialsRequest", "Auth")" method="post">
            <div class="mb-3">
                <label for="Name" class="form-label">Name</label>
                <input type="text" id="Name" name="Name" class="form-control" style="width: 100%;" />
            </div>

            <div class="mb-3">
                <label for="Company" class="form-label">Company</label>
                <input type="text" id="Company" name="Company" class="form-control" style="width: 100%;" />
            </div>

            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" id="Email" name="Email" class="form-control" style="width: 100%;" />
            </div>

            <button type="submit" class="btn btn-primary">Submit Request</button>
        </form>
    </div>

    <!-- You can add more scripts or JavaScript references here -->
</body>
</html>

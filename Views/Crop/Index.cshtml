@model IEnumerable<CoffeePricingMgt.Models.tblCrop>

@{
    ViewBag.Title = "Crops List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form class="form-horizontal">
    <div class="content container-fluid" style="padding-top:15px">
        <div class="row col-md-12">
            <div class="col-md-11"><h4>@ViewBag.Title</h4></div>
            <div class="col-md-1 pull-right">
                <a type="button" href="@Url.Action("Create", "Crop")" class="btn btn-primary">Add New Crop</a>
            </div>
        </div>
    </div>
</form>
<div class="row">
    <div class="col-sm-12">
        <div class="card mb-0 ml-2 mr-2">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example14" class="datatable table table-stripped mb-0 datatables">
                        <thead>
                            <tr>
                                @*<th>
                                    @Html.DisplayName("Origin")
                                </th>*@
                                <th>
                                    @Html.DisplayName("Crop Name")
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.tblCategory.Name)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CropName)
                                    </td>

                                    <td>
                                        @*@if (rolename == "Admin")
            {*@
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
